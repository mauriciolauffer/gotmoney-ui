<mvc:View controllerName="com.mlauffer.gotmoneyappui5.controller.Index" xmlns:core="sap.ui.core"
          xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" busyIndicatorDelay="0">
    <Page id="page" title="{i18n>About.title}" showNavButton="true" navButtonPress="onNavBack">
        <Panel class="sapUiLargeMargin" width="auto">
            <VBox>
                <Title level="H2" text="{i18n>About.t1}" class="sapMH3FontSize"/>
                <Text text="{i18n>About.p1}"/>
                <Title level="H2" text="{i18n>About.t2}" class="sapMH3FontSize sapUiLargeMarginTop"/>
                <Text text="{i18n>About.p2}"/>
            </VBox>
        </Panel>
        <footer>
            <core:Fragment fragmentName="com.mlauffer.gotmoneyappui5.view.IndexFooter" type="XML"/>
        </footer>
    </Page>
</mvc:View>
