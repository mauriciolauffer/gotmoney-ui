<mvc:View controllerName="com.mlauffer.gotmoneyappui5.controller.CategoryList"
	xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m" busyIndicatorDelay="0">
	<Page id="page" title="{i18n>Category.title}" showNavButton="true" navButtonPress="onNavBack">
		<List id="list" items="{/User/Category}">
			<StandardListItem title="{description}" type="Navigation" press="onItemPress" />
		</List>
		<footer>
			<Toolbar>
				<ToolbarSpacer />
				<Button id="btNew" icon="sap-icon://add" text="{i18n>XBUT.new}" press="onAddNew" />
			</Toolbar>
		</footer>
	</Page>
</mvc:View>
